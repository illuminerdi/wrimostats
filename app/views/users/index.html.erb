<h1>Listing users</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Hashed password</th>
    <th>Salt</th>
    <th>Can has notifications</th>
    <th>Uid</th>
    <th>Uname</th>
    <th>Rid</th>
    <th>Novel title</th>
    <th>Is admin</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%=h user.name %></td>
    <td><%=h user.email %></td>
    <td><%=h user.hashed_password %></td>
    <td><%=h user.salt %></td>
    <td><%=h user.can_has_notifications %></td>
    <td><%=h user.uid %></td>
    <td><%=h user.uname %></td>
    <td><%=h user.rid %></td>
    <td><%=h user.novel_title %></td>
    <td><%=h user.is_admin %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New user', new_user_path %>