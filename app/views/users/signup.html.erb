<% form_for(@user) do |f| %>
  <%= f.error_messages %>
<fieldset>
  <legend>Sign Up</legend>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.text_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation %><br />
    <%= f.text_field :password_confirmation %>
  </p>
  <p>
    <%= f.label :can_has_notifications %><br />
    <%= f.check_box :can_has_notifications %>
  </p>
  <p>
    <%= f.label :uid %><br />
    <%= f.text_field :uid %>
  </p>
  <p>
    <%= f.submit 'Create Your Account' %>
  </p>
</fieldset>
<% end %>