<h1>New user</h1>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>
  <table>
    <%= render :partial => 'basic_form', :locals => {:f => f} %>
    <tr>
      <td>
        <%= f.label :is_admin, "Admin Account?" %>
      </td>
      <td>
        <%= f.check_box :is_admin %>
      </td>
    </tr>
    <tr>
      <td colspan="2">
        <%= f.submit 'Create Your Account' %>
      </td>
    </tr>
  </table>
<% end %>

<%= link_to 'Back', users_path %>